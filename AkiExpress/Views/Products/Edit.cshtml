@model ProductsCreateVM



<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6">
            <form asp-controller="Products" asp-action="Edit" method="post">
                <input asp-for="Id" hidden />
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control">
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control">
                    <span asp-validation-for="Quantity"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control">
                    <span asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Thumbnail"></label>
                    <input asp-for="Thumbnail" class="form-control">
                    <span asp-validation-for="Thumbnail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image01"></label>
                    <input asp-for="Image01" class="form-control">
                    <span asp-validation-for="Image01"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image02"></label>
                    <input asp-for="Image02" class="form-control">
                    <span asp-validation-for="Image02"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image03"></label>
                    <input asp-for="Image03" class="form-control">
                    <span asp-validation-for="Image03"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image04"></label>
                    <input asp-for="Image04" class="form-control">
                    <span asp-validation-for="Image04"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image05"></label>
                    <input asp-for="Image05" class="form-control">
                    <span asp-validation-for="Image05"></span>
                </div>
                <div class="form-group">
                    <img style="width:200px; height:200px;" src="@Model.Thumbnail" />
                </div>
                <button type="submit" class="btn btn-success btn-lg btn-block">Update</button>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
