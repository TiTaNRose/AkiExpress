@model MainViewModel

<div class="container" style="padding: 2rem 0rem;">
    <div class="row">
        <div class="col-12">
            <table class="table table-image">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th>
                        <th scope="col">Category</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td class="w-25">
                            <a asp-action="Details" asp-route-name="@item.Name" asp-route-id="@item.Id"><img style="width:200px; height:200px;" src="@item.Thumbnail" class="img-fluid img-thumbnail" alt="@item.Name"></a>
                        </td>
                        <td><a asp-action="Details" asp-route-name="@item.Name" asp-route-id="@item.Id" ><b>@item.Name</b></a></td>
                        <td>@item.Description</td>
                        <td><b>@item.Price</b></td>
                        <td><b>@item.CategoryName</b></td>
                        <td><b>@item.Quantity</b></td>
                        <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a></td>
                        <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>   
                    </tr>
                    }
                    </tbody>
            </table>
        </div>
    </div>
</div>


<div class="container">
    <a class="btn btn-primary" asp-action="Create">Create new Product</a>
</div>
