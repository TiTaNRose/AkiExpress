@model LoginVM

<div class="container">
    <form method="post" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="billing-details">
            <div class="section-title">
                <h3 class="title">Log in</h3>
            </div>
            <div class="form-group">
                <input class="input" asp-for="Email" placeholder="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <input class="input" asp-for="Password" placeholder="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="custom-checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
            <br />
            <button type="submit" class="primary-btn order-submit">Login</button>
        </div>
    </form>
</div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
