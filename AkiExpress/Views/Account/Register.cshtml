@model RegisterVM

<div class="container">
    <form method="post" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="billing-details">
            <div class="section-title">
                <h3 class="title">Register</h3>
            </div>
            <div class="form-group">
                <input class="input" asp-for="Name" placeholder="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <input class="input" asp-for="Email" placeholder="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <input type="password" class="input" asp-for="Password" placeholder="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input type="password" class="input" asp-for="ConfirmPassword" placeholder="Confirm Password">
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <br />
            <button type="submit" class="primary-btn order-submit">Register</button>
        </div>
    </form>
</div>


   @section Scripts{
   @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   }
