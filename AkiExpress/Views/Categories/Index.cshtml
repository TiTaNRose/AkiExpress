@model IEnumerable<Categories>


@if (Model.Count() > 0)
{
<div class="container">

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>         
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <th>@item.Id</th>
                <th>@item.Name</th>
                <th><a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary">Edit</a></th>
                <th><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></th>    
            </tr>
                    }
            </tbody>
    </table>
</div>
}

else
{
    <h1 class="text-danger text-center">No categories to load</h1>
}

<div class="container">
    <a class="btn btn-primary" asp-action="Create">Create new category</a>
</div>
